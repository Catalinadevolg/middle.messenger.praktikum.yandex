stylesheets:
  - ../../styles/main.css
---

{{!< page}}
<a href="../messenger/messenger.hbs" class="profile__back-btn">
    <div class="back-btn"></div>
</a>
<div class="profile">
    <div class="profile__avatar">
        <img src="../../assets/empty-avatar.png" alt="">
    </div>
    <p class="profile__name">Иван</p>
    <div class="profile__info">
        <div class="profile__info-conainer">
            {{> "profile-line/profile-line" label="Почта" value="pochta@yandex.ru" name="email" placeholder="Укажите почту"}}
            {{> "profile-line/profile-line" label="Логин" value="ivanivanov" name="login" placeholder="Введите логин"}}
            {{> "profile-line/profile-line" label="Имя" value="Иван" name="first_name" placeholder="Введите имя"}}
            {{> "profile-line/profile-line" label="Фамилия" value="Иванов" name="second_name" placeholder="Введите фамилию"}}
            {{> "profile-line/profile-line" label="Имя в чате" value="Иван" name="display_name" placeholder="Укажите имя для чата"}}
            {{> "profile-line/profile-line" label="Телефон" value="+7 (909) 967 30 30" name="phone" placeholder="Укажите телефон" disabled="false"}}
        </div>
    </div>
    <div class="profile__link">
        <a href="change-info.hbs" class="blue-link">Изменить данные</a>
    </div>
    <div class="profile__link">
        <a href="change-psw.hbs" class="blue-link">Изменить пароль</a>
    </div>
    <div class="profile__link">
        <a href="../index.hbs" class="red-link">Выйти</a>
    </div>
</div>